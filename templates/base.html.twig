<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Blog participatif
			{% endblock %}
		</title>

		<link rel="icon" href="/assets/pictures/logo/w-sans-fond.svg">
		<meta name="viewport" content="width=device-width, initial-scale=1.0"> {% block stylesheets %}{% endblock %}
		{{ encore_entry_link_tags('app') }}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
		<link rel="stylesheet" href="{{ asset('assets/css/font.css')}}">
		<link rel="stylesheet" href="{{ asset('assets/css/styles.css')}}">
		<link rel="stylesheet" href="{{ asset('assets/css/stylesCardMenu.css')}}">
		<link rel="stylesheet" href="{{ asset('assets/css/stylesNavbar.css')}}">
		<link rel="stylesheet" href="{{ asset('assets/css/stylesFooter.css')}}">
		<link rel="stylesheet" href="{{ asset('assets/css/stylesRegister.css')}}">
		<link rel="stylesheet" href="{{ asset('assets/css/stylesForm.css')}}"> {% block javascripts %}{% endblock %}
		{{ encore_entry_script_tags('app') }}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="{{ asset('scripts/functions.js') }}"></script>


	</head>
	<body>

		{# avant mon bloc body je veux la nav #}
		{% include './partials/_nav.html.twig' %}
		{% if app.user and app.user.isVerified == false %}
			<div class="alert alert-warning alert-dismissible" role="alert">
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-labael="close"></button>
				<div class="alert-message">
					Pour accéder à votre compte, vous devez valider votre adresse e-mail, où
					<a href="{{ path('resend_verification') }}">Renvoyer un lien d'activation</a>
				{% endif %}
				{% if app.user %}
					<div class="welcome-container">
						<div class="welcome-box">
							<p class="welcome-text">Bonjour
								{{ app.user.pseudo }}</p>
						</div>
					</div>
				{% endif %}
			</div>
		</div>

		{% include './partials/_flash.html.twig' %}

		{% block body %}{% endblock %}

		{% include 'partials/_footer.html.twig' %}

	</body>
</html>


