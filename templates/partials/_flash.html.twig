{# mise en place de different message d'alert, on va l'inclure dans la base #}
{% for label, messsages in app.flashes %}
	{% for message in messsages %}
		<div class="alert alert-{{ label }} alert-dismissible" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-labael="close"></button>
			<div class="alert-message">{{ message|raw }}</div>
		</div>
	{% endfor %}
{% endfor %}
